# Polygon RPC endpoints (WebSocket required for real-time event watching)
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_HTTP=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Expert wallet address to monitor
EXPERT_ADDRESS=0xd0d6053c3c37e727402d84c14069780d360993aa

# SQLite database path
DB_PATH=./data/trade-watcher.db

# Logging level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# If set, all CLI output is also written to this file (plain text)
# LOG_FILE=./logs/trade-watcher.log

# CLOB API polling interval in milliseconds (default: 30000)
CLOB_POLL_INTERVAL_MS=30000

# Health check server port
HEALTH_PORT=3100
